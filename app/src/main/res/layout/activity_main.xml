<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.android.tipcalculator.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tip Calculator 2018"
        android:textColor="#fff"
        android:textSize="40sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/title"
        android:id="@+id/layout1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Cost: "
            android:textColor="#fff"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:textSize="30sp"
            android:textColor="#fff"
            android:id="@+id/cost"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout1"
        android:id="@+id/layout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="# Of People:"
            android:textColor="#fff"
            android:textSize="30sp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="5"
            android:textSize="30sp"
            android:textColor="#fff"
            android:id="@+id/split"
            />

    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TipPercent"
        android:layout_below="@id/label"
        android:max="30"
        android:progress="15"

        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox"
        android:layout_below="@id/layout2"
        android:text="Split Check?"
        android:textSize="20sp"
        android:textColor="#fff"

        android:checked="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:text="15"
        android:layout_below="@id/checkbox"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelp"
        android:text="%"
        android:layout_below="@id/checkbox"
        android:layout_toRightOf="@id/label"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/calc"
        android:text="Calculate"
        android:onClick="Calculate"
        android:layout_below="@id/TipPercent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip: "
        android:textSize="30sp"
        android:textColor="#fff"
        android:id="@+id/tip"
        android:layout_below="@id/calc"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_below="@id/calc"
        android:layout_toRightOf="@id/tip"
        android:id="@+id/done"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cost: "
        android:textSize="30sp"
        android:textColor="#fff"
        android:id="@+id/total"
        android:layout_below="@id/tip"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text=""
        android:textColor="#fff"
        android:id="@+id/total2"
        android:layout_below="@id/done"
        android:layout_toRightOf="@id/total"
        />







</RelativeLayout>